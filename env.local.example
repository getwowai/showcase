# Site URL (for Open Graph and social sharing)
# This is used for generating Open Graph meta tags for WhatsApp, Facebook, Twitter, etc.
NEXT_PUBLIC_SITE_URL=https://getwow.ai

# Mixpanel Configuration
# Get your project token from https://mixpanel.com/project/settings
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_project_token

# Landing Page Variant Configuration
# Options: 'minimal', 'minimal-plus', 'control', 'social-proof'
# Default: 'control' (shows the original full landing page)
NEXT_PUBLIC_DEFAULT_LANDING_VARIANT=control

# Force Variant Override
# Set to 'true' to use NEXT_PUBLIC_DEFAULT_LANDING_VARIANT instead of Mixpanel
# Set to 'false' to use Mixpanel feature flags for A/B testing
# Default: 'false'
NEXT_PUBLIC_FORCE_VARIANT_OVERRIDE=false

# Development Configuration
# Set to 'development' for local development
# Set to 'production' for production builds
NODE_ENV=development
